.search-bgcolor {
    background-color: #ffdfec;
}

.class-box {
    width: 705rpx;
    margin: 0 auto;
    padding-bottom: 28rpx;
    border-bottom: 1rpx #e4e4e4 solid;
}

.title {
    height: 28rpx;
    line-height: 28rpx;
    color: #4f4f4f;
    font-size: 24rpx;
    padding-left: 10rpx;
    border-left: #f00 7rpx solid;
}

.list {
    padding: 10rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    font-size: 24rpx;
    text-align: center;
}

.list text {
    border: #ccc 1rpx solid;
    border-radius: 30rpx;
    line-height: 27rpx;
    margin: 10rpx 6rpx 0 ;
    padding: 6rpx 16rpx;
}

.list .active-class {
    color: red;
    border: #f00 1rpx solid;
}

.country {
    border-left: #9c0 solid 7rpx;
}

.list .active-country {
    color: #9c0;
    border: #9c0 1rpx solid;
}

.class-item {
    margin-top: 30rpx;
}

.movie-item {
    border-bottom: 1rpx #e4e4e4 solid;
    padding: 40rpx 30rpx;
    display: flex;
}

.movie-info {
    font-size: 23rpx;
    color: #666;
}

.p-title {
    font-size: 28rpx;
    color: #000;
    padding-bottom: 10rpx;
}

.p-pricer {
    color: #e43728;
    font-size: 24rpx;
}

.p-pricer text {
    font-size: 30rpx;
}

.poster image {
    width: 175rpx;
    height: 225rpx;
    margin-right: 35rpx;
}

.p-comment {
    display: flex;
    align-items: center;
}

.p-comment .stars {
    display: flex;
}

.p-comment .stars image {
    width: 21rpx;
    height: 21rpx;
    margin-right: 6rpx;
}

page {
    padding: 0;
    margin: 0;
}

.search-bgcolor {
    background-color: #ffb;
}

/* 轮播 */

.swiper swiper {
    margin-top: 16rpx;
    height: 250rpx;
    text-align: center;
}

.swiper swiper .slide-image {
    width: 100%;
    height: 250rpx;
}

.swiper swiper .load-image {
    width: 32px;
    height: 32px;
    margin-top: 50rpx;
}

/* 菜单 */

.nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
}

.nav .nav-item {
    width: 150rpx;
    margin-top: 30rpx;
}

.nav .nav-item-img {
    height: 90rpx;
}

.nav .nav-item-img image {
    width: 90rpx;
    height: 90rpx;
}

.nav .nav-item-text {
    font-size: 23rpx;
    color: #5d5d5d;
}

/* top-3 */

.hotsale {
    margin-top: 28rpx;
    background-color: #fbbebd;
}

/* 快讯 */

.news {
    display: flex;
    align-items: center;
    width: 100%;
    height: 95rpx;
    background: linear-gradient(#fbbebd, #9cc);
}

.news-img image {
    width: 90rpx;
    height: 34rpx;
    margin-left: 20rpx;
}

.news-box {
    width: 700rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 auto;
    overflow: hidden;
    border-radius: 12rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
}

.news-body {
    width: 100%;
    padding: 20rpx;
    line-height: 56rpx;
}

.news-body swiper {
    height: 60rpx;
    font-size: 24rpx;
    overflow: hidden;
}

/* 特价包邮 */

.baoyou .hotsale {
    margin: 0;
    background-color: #9cc;
}

.baoyou .hotsale-item {
    position: relative;
}

.ico99 {
    position: absolute;
    top: 16rpx;
    right: 18rpx;
    width: 74rpx;
    height: 74rpx;
}

.line {
    height: 30rpx;
    margin-bottom: 30rpx;
    background: linear-gradient(#9cc, #fff);
}

/* 五星 */

.stars-item-title {
    display: flex;
    justify-content: space-between;
}

.stars-item-title-name {
    font-size: 30rpx;
    width: 318rpx;
    height: 51rpx;
    line-height: 51rpx;
    border-bottom-right-radius: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15rpx;
}

.stars-item-title-name image {
    width: 38rpx;
    height: 36rpx;
}

.stars-item-title-name text {
    margin-right: 22rpx;
}

.stars-item-title-more {
    padding-right: 35rpx;
    font-size: 24rpx;
    color: #999;
}

.star-red-25x25 {
    width: 25rpx;
    height: 25rpx;
}

.stars-body-box {
    padding: 20rpx 50rpx 40rpx 34rpx;
    display: flex;
    justify-content: space-between;
}

.stars-title {
    width: 430rpx;
    height: 75rpx;
    overflow: hidden;
    font-size: 30rpx;
    color: #000;
}

.stars-comment {
    width: 300rpx;
    display: flex;
    align-items: center;
    margin: 20rpx 0;
}

.stars-comment .stars5 image {
    width: 21rpx;
    height: 21rpx;
    margin-right: 4rpx;
}

.stars-comment .comment-counts {
    color: #acb4bd;
    font-size: 24rpx;
    margin-left: 30rpx;
}

.stars-price {
    color: #e12616;
    font-size: 30rpx;
}

.stars-price text {
    font-size: 40rpx;
}

.stars-item-body-right image {
    width: 157rpx;
    height: 216rpx;
}

/* 音乐top6 */

.music {
    background-color: #aee800;
}

.music-title {
    color: #fff;
    padding: 25rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
}

.music-body {
    display: flex;
    align-content: flex-start;
    flex-wrap: wrap;
    padding: 0 12rpx 30rpx 25rpx;
}

.music-body .music-item {
    width: 224rpx;
    height: 345rpx;
    margin-bottom: 30rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin-right: 14rpx;
}

.music-body .music-item-img {
    width: 195rpx;
    height: 195rpx;
    padding: 14rpx;
}

.padding-letf-24 {
    padding-left: 24rpx;
}
.padding-letf-24  image{
    width: 25rpx;
    height: 25rpx;
}

.music-body .music-item-star {
    height: 40rpx;
}

.music-body .music-item-star image {
    width: 25rpx;
    height: 25rpx;
}

.music-item .music-item-title {
    height: 28rpx;
    color: #484848;
    font-size: 28rpx;
    line-height: 28rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.music-item .music-item-text {
    color: #ff5c00;
    font-size: 24rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.music-item .music-item-text text {
    font-size: 30rpx;
}

.m-m-line {
    height: 30rpx;
    background: linear-gradient(#aee800, #ffaf37);
}

/* 电影 */

.movie {
    background-color: #ffaf37;
}

.movie .music-body {
    padding-bottom: 0;
}

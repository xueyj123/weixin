page {
  background: #f1f1f1 url('https://www.huachengzhubao.com/syweb10/static/images/mybg.jpg') no-repeat;
  background-size: 100%;
}

.header {
  width: 106rpx;
  height: 106rpx;
  margin: auto;
}

.header image {
  border: #fff 2rpx solid;
  border-radius: 50%;
}

.hello {
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  margin-top: 20rpx;
}

.items {
  margin-top: 50rpx;
  display: flex;
  padding: 0 40rpx;
  justify-content: space-between;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-img {
  width: 45rpx;
  height: 45rpx;
}

.item-text {
  font-size: 22rpx;
  color: #fff;
  padding-top: 10rpx;
}

.tools {
  width: 440rpx;
  height: 96rpx;
  margin: 25rpx auto 0;
  display: flex;
  justify-content: center;
  background-color: #fff;
  border-radius: 8rpx;
}

.tools-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tools-item view {
  margin-top: 10rpx;
}

.tools-img {
  width: 42rpx;
  height: 42rpx;
}

.tools-text {
  font-size: 22rpx;
  color: #666;
}






.recommend{
  margin-top: 100rpx;
}

.recommend-title {
  color: #f7415e;
  text-align: center;
}

.recommend-title image {
  width: 38rpx;
  height: 38rpx;
}
.recommend-body{
  padding: 20rpx;
  margin-top: 10rpx;
}
.recommend-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.hotsale-item{
  margin-bottom: 15rpx;
}




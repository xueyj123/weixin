.contcat {
    height: 214rpx;
    background: url('https://www.huachengzhubao.com/syweb10/static/images/paybg.gif') repeat-x;
    background-size: contain;
    box-sizing: border-box;
    padding: 50rpx 50rpx 50rpx 30rpx;
}

.contcat-top {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    font-weight: bold;
}

.name image {
    width: 20rpx;
    height: 28rpx;
}

.contcat-bottom {
    padding: 20rpx 0 0 30rpx;
    font-size: 23rpx;
    color: #666;
}

.info {
    padding: 36rpx 25rpx 0 25rpx;
}

.title {
    font-size: 26rpx;
    font-weight: bold;
    padding-bottom: 15rpx;
}

.title image {
    width: 28rpx;
    height: 28rpx;
}

.contain image {
    width: 100rpx;
    height: 126rpx;
}
.contain view{
    width: 20%
}
.contain {
    width: 100%;
    border-top: 1rpx solid #dbdbdb;
    padding: 10rpx 0;
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    /* justify-content: center; */
    align-items: center
}

.totalprice {
    display: flex;
    justify-content: space-between;
    padding: 0 0 20rpx 40rpx;
    border-bottom: 1rpx solid #dbdbdb;
    font-size: 26rpx;
}

.sumbit {
    padding-right: 25rpx;
    margin-top: 50rpx;
    font-size: 26rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center
}
.sumbit text{
    margin-left: 30rpx;
}

.total {
    color: #666
}

.money {
    color: #E53E30
}

.btn {
    width: 188rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    color: #fff;
    background-color: #E53E30
}
